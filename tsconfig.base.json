{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "incremental": true,
    "removeComments": true,
    "lib": [
      "ES2020"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/lib/**"
  ]
}
